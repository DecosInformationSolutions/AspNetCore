<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Authors>Laura Verdoes</Authors>
    <Company>Decos Information Solutions</Company>
    <Description>ASP.NET Core implementation of QueueBackgroundWorkItem as provided by https://github.com/aspnet/Extensions/issues/805</Description>
    <Version>2.0.0</Version>
    <PackageReleaseNotes>Updated to support .NET 5</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Decos.AspNetCore.BackgroundTasks.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="2.2.0" />
  </ItemGroup>

</Project>
